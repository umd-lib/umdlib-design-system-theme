{# 
/**
 * @file
 * UMD Libraries Alert component.
 *
 * Available variants:
 * - in_page
 * - site_wide
 *
 * Variables:
 * title: The title of the alert.
 * alert_description: The description text of the alert.
 * link_text: The text for the link.
 * link_url: The URL for the link.
 */
 #}

{# Get the variant, defaulting to standard if not specified #}
{% set selectedVariant = variant | default('in_page') %}

{% if title is defined %}
{% set alertId = componentid | default('alert-' ~ random()) %}
<div 
  {% if selectedVariant == 'in_page' %}role="note" {% else %}role="region"{% endif %}
  class="umd-lib alert alert--{{ selectedVariant }}" 
  aria-labelledby="{{ alertId }}-title"
  id="{{ alertId }}">
  <div class="alert--container {% if selectedVariant == 'site_wide' %}s-box-page-medium-h s-center s-page-lock {% else %} s-margin-general-medium {% endif %}">
    <div class="alert--content s-box-medium-v {% if selectedVariant == 'in_page' %}s-box-medium-h{% endif %}">
      
      <div class="alert--title">
        {% if selectedVariant == 'in_page' %}
          <h2 id="{{ alertId }}-title" class="t-title-small c-content-primary s-stack-small">
        {% else %}
          <p id="{{ alertId }}-title" class="t-title-small c-content-primary s-stack-small">
        {% endif %}
        
        {% block title %} {% endblock %}
   
        {% if selectedVariant == 'in_page' %}
          </h2>
        {% else %}
          </p>
        {% endif %}
      </div>
      
      {% if alert_description is defined and alert_description is not empty %}
        <div class="alert--description {% if link_text and link_url %}s-stack-medium{% endif %} wysiwyg-editor">
          {% block alert_description %} {% endblock %}
        </div>
      {% endif %}

      {% if link_text is defined and link_url is defined %}
        {% include 'umdlib_umdds:umd-libraries-emphasized-link' with {
          'link_text': link_text,
          'link_url': link_url,
        } only %}
      {% endif %}

      {% if selectedVariant == 'site_wide' %}
        <button class="alert--button-close s-box-medium-v" 
          aria-label="Close site notification" 
          aria-controls="{{ alertId }}">
          <svg aria-hidden="true" width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="3.2561" y="0.321533" width="20.75" height="4.15" transform="rotate(45 3.2561 0.321533)" fill="black"></rect><rect x="17.9285" y="3.25598" width="20.75" height="4.15" transform="rotate(135 17.9285 3.25598)" fill="black"></rect></svg>
        </button>
      {% endif %}
    </div>
  </div>
</div>

{% else %}
  {# variable error handling #}
  <div class="c-content-interactive-primary c-bg-interactive-primary s-box-small-h"> [ERROR] - UMD Libraries Alert / Variant - {{ selectedVariant }}</div>
  <div class="s-box-small-h"> Required fields missing: <strong>Alert Title</strong></div>
{% endif %}
